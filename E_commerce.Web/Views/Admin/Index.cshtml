@model IEnumerable<AdminsIndexViewModel>

@{ 
    ViewData["Title"] = "Admins Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admins Table</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> User </th>
                            <th> FullName </th>
                            <th> Admin Statu </th>
                            <th> Email </th>
                            <th> Phone Number </th>
                            <th> Details </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    @if (item.ProfilePicture == null)
                                    {
                                        <img src="~/Systemassets/images/Screenshot 2022-06-17 195427.png" alt="image" />
                                    }
                                    else
                                    {
                                        <img src="data:image/*;base64,@(Convert.ToBase64String(item.ProfilePicture))" alt="image" />
                                    }
                                </td>
                                <td> @item.FullName </td>
                                @if (item.IsActive)
                                {
                                    <td>
                                        <div class="badge badge-outline-success">Active</div>
                                    </td>
                                }
                                else 
                                {
                                    <td>
                                        <div class="badge badge-outline-danger">Not Active</div>
                                    </td>  
                                }
                                <td> @item.Email </td>
                                @if (item.PhoneNumber == null)
                                {
                                    <td> No Phone Number.. </td>
                                }
                                else
                                {
                                    <td> @item.PhoneNumber </td>
                                }
                                <td> <a asp-action="Details" asp-route-email="@item.Email" class="btn btn-inverse-warning">Details Admin</a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>